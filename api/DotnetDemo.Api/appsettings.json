{
  "Logging": {
    "Directory": "../logs",
    "MinimumLevel": "Information",
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information",
          "System": "Warning"
        }
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": {
            "path": "logs/app.log",
            "rollingInterval": "Day",
            "shared": true
          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    }
  },
  "Database": {
    "Provider": "mysql",
    "ConnectionString": "Server=db;Port=3306;Database=ruby_demo_development;Uid=ruby-demo;Pwd=2u8y-c0d3;SslMode=Preferred;AllowPublicKeyRetrieval=True;CharSet=utf8mb4"
  },
  "Seeds": {
    "ArticleSeedPath": "Seeds/article_seed_data.json"
  },
  "Telemetry": {
    "ServiceName": "dotnet-demo-api"
  },
  "AllowedHosts": "*"
}
